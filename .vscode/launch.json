{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Compiler",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/jtoy",
            "args": [
                "--run-unit-tests",
                "test.jtoy"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": false,
            "visualizerFile": "${workspaceRoot}/jtoy.natvis",
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "MIMode": "lldb"
            },
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            }
        },
    ]
}